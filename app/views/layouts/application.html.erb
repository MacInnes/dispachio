<!DOCTYPE html>
<html>
  <head>
    <title>Dispachio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

  </head>

  <body>
    <%= flash[:notice] if flash[:notice] %>
    <% if current_user %>
      <p>Logged in as <%= current_user.username %></p>
    <% else %>
      <%= link_to "Register", register_path %>
    <% end %>
    <%= yield %>

  </body>
</html>
