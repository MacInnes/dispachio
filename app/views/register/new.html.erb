<%= form_tag [:api, :v1, :users], method: 'POST' do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag "role_dispatcher", "Dispatcher" %>
    <%= radio_button_tag :role, "dispatcher", id: "dispatcher", class: "form-check" %>

    <%= label_tag "role_driver", "Driver" %>
    <%= radio_button_tag :role, "driver", id: "driver", class: "form-check" %>
  </div>


  <%= submit_tag "Submit" %>
<% end %>
