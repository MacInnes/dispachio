<%= form_tag [:api, :v1, :users], method: 'POST' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= label_tag :role %>
  <%= select_tag :role, ["dispatcher", "driver"] %>
  <%= label_tag "Dispatcher", for: "dispatcher" %>
  <%= radio_button_tag :role, "Dispatcher", id: "dispatcher" %>
  <%= label_tag "Driver", for: "driver" %>
  <%= radio_button_tag :role, "Driver", id: "driver" %>


  <%= submit_tag "Submit" %>
<% end %>
