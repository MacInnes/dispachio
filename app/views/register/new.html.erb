<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :role %>
  <%= f.select :role, [["Dispatch", 1], ["Driver", 0]] %>

  <%= f.submit "Submit" %>
<% end %>
