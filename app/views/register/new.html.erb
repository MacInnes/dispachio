<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :role %>
  <%= f.select :role, ["Dispatcher", "Driver"] %>

  <%= f.submit "Submit" %>
<% end %>
